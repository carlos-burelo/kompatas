<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3em;
    justify-content: space-around;
  }

  .links {
    gap: 1em;
  }
  .link {
    grid-template-columns: 3em 1fr;
    gap: 0.5em;
    align-items: center;
  }

  .links,
  .link {
    display: grid;
  }

  .link button {
    padding: 0.75em 2em !important;
    background-color: var(--amarillo);
  }

  .link svg {
    width: 3em;
    height: 3em;
  }

  footer {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  footer a {
    padding: 1em 1.5em !important;
  }

  .menu {
    color: #fff;
  }
</style>
